<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/wifi_scan_progress_bar"
        android:padding="5dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/wifi_device_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/wifi_scan_progress_bar"
        android:layout_toLeftOf="@+id/wifi_scan_progress_bar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="15dp"
        android:textStyle="italic"
        android:textColor="@android:color/background_light"
        android:text="@string/select_wifi_ap"/>

    <ListView
        android:id="@+id/wifi_aps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_below="@+id/wifi_device_list_title"
        />
</RelativeLayout>

